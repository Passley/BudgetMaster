<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsTwoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!--- Muss noch mittig plaziert werden-->

        <TextView
            android:id="@+id/text_kontoloesch_frage"
            android:layout_width="358dp"
            android:layout_height="42dp"
            android:text="Konto unwiederruflich löschen?"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.698"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.319" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_kontoloesch_bestaetigen"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:elevation="40dp"
            android:text="Konto löschen"
            app:icon="@drawable/icon_settings"
            app:iconPadding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_kontoloesch_frage"
            app:layout_constraintVertical_bias="0.029" />
        <!--- Kontoinformationen aus der Datenbank löschen -->


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>