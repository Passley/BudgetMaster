<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_registrierung"
            android:layout_width="148dp"
            android:layout_height="38dp"
            android:text="Registrierung"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/Eingabe_Email2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.911" />

        <EditText
            android:id="@+id/Eingabe_Email2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="444dp"
            android:ems="10"
            android:hint="E-Mail-Adresse"
            android:inputType="text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/Eingabe_Nutzername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nutzername"
            android:inputType="text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Eingabe_Email2"
            app:layout_constraintVertical_bias="0.062" />

        <EditText
            android:id="@+id/Eingabe_passwort_erstellen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Passwort erstellen"
            android:inputType="textPassword"
            app:layout_constraintBottom_toTopOf="@+id/Eingabe_passwort_bestaetigen"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Eingabe_Nutzername"
            app:layout_constraintVertical_bias="0.473" />

        <EditText
            android:id="@+id/Eingabe_passwort_bestaetigen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="228dp"
            android:ems="10"
            android:hint="Passwort bestÃ¤tigen"
            android:inputType="textPassword"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Eingabe_Email2"
            app:layout_constraintVertical_bias="0.976" />

        <TextView
            android:id="@+id/Text_Anmelden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anmelden?"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.293"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Eingabe_passwort_bestaetigen"
            app:layout_constraintVertical_bias="0.051" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Button_registrieren_fragReg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrieren"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Eingabe_passwort_bestaetigen"
            app:layout_constraintVertical_bias="0.266"
            android:background="@drawable/button_design_2"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="134dp"
            android:layout_height="147dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toTopOf="@+id/text_registrierung"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/logo_budgetmaster" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>